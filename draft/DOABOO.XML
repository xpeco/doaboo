<?xml version="1.0" encoding="UTF-8"?>
<MODULE NAME="DOABOO" DESC="DoABoo Tool">
	<HINT></HINT>
		  
<OBJECT NAME="TOPICS" DESC="Topic">
		<HINT>Defines the possible logins to the actual application.</HINT>
	<ATTRIBUTE NAME="DESC" DESC="Name">
		<TYPE>CHAR</TYPE>
		<REQUIRED>Y</REQUIRED>
		<RECALCULATE>Y</RECALCULATE>
	</ATTRIBUTE>
	<ATTRIBUTE NAME="NAME" DESC="Normalized Name">
		<TYPE>CHAR</TYPE>
		<KEY>Y</KEY>
		<REQUIRED>Y</REQUIRED>
		<RANGE><BLOCK>
		return NormalizedText($edited->{DESC});
		</BLOCK></RANGE>
		<RECALCULATE>Y</RECALCULATE>
		<LIST>Y</LIST>
	</ATTRIBUTE>
	<ATTRIBUTE NAME="ENABLE" DESC="Enable">
		<TYPE>BOOLEAN</TYPE>
		<DEFAULT>Y</DEFAULT>
	</ATTRIBUTE>
	<ATTRIBUTE NAME="ES" DESC="Spanish">
		<TYPE>CHAR</TYPE>
	</ATTRIBUTE>
	<ATTRIBUTE NAME="COMMENTS" DESC="Comments">
		<TYPE>MEMO</TYPE>
	</ATTRIBUTE>

	<METHOD NAME="NEW" DESC="New">
		<TYPE>NEW</TYPE>
		<FIELD NAME="DESC"/>
		<FIELD NAME="NAME"/>
		<FIELD NAME="ES"/>
		<FIELD NAME="COMMENTS"/>
		<FIELD NAME="ENABLE"/>
	</METHOD>
	
	<METHOD NAME="MODIFY" DESC="Edit">
		<TYPE>NORMAL</TYPE>
		<FIELD NAME="DESC">
		  <READ_ONLY>Y</READ_ONLY>
		</FIELD>
		<FIELD NAME="NAME">
		  <READ_ONLY>Y</READ_ONLY>
		</FIELD>
		<FIELD NAME="ES"/>
		<FIELD NAME="COMMENTS"/>
		<FIELD NAME="ENABLE"/>
	</METHOD>
	
	<METHOD NAME="DELETE" DESC="Delete">
		<TYPE>DELETE</TYPE>
<!--		<POSTSCRIPT><BLOCK>
		my $items=EXGet_Instance_List('PULSO_FIELDS',{PULSO_OBJECT=>$stored->{NAME}},'NONE');
		EXMultiple_Execute({object=>'PULSO_FIELDS',method=>'DELETE',instances=>$items}) if(@$items!=0);
		</BLOCK></POSTSCRIPT>-->
	</METHOD>
	
	<VIEW NAME="DEFAULT" DESC="Default">
		<HINT>View that opens by default when accessing the users. It shows the main fields of all users.</HINT>
		<VIEW_FIELD NAME="DESC"/>
		<VIEW_FIELD NAME="ENABLE"/>
		<VIEW_FIELD NAME="COMMENTS"/>
	</VIEW>
</OBJECT>

<OBJECT NAME="ATTRIBUTES" DESC="Fields">
	<ATTRIBUTE NAME="ID" DESC="Id">
		<TYPE>AUTO</TYPE>
		<KEY>Y</KEY>
		<REQUIRED>Y</REQUIRED>
	</ATTRIBUTE>
	<ATTRIBUTE NAME="TOPIC" DESC="Associated Topic">
		<TYPE>RELATION</TYPE>
		<RELATION>TOPICS</RELATION>
		<KEY_CAPTION>N</KEY_CAPTION>
		<REQUIRED>Y</REQUIRED>
	</ATTRIBUTE>
	<ATTRIBUTE NAME="POSITION" DESC="Position">
		<HINT>Position of the field in the view.</HINT>
		<TYPE>INT</TYPE>
		<REQUIRED>Y</REQUIRED>
	</ATTRIBUTE>
	<ATTRIBUTE NAME="DESC" DESC="Name">
		<TYPE>CHAR</TYPE>
		<RECALCULATE>Y</RECALCULATE>
		<KEY_CAPTION>Y</KEY_CAPTION>
	</ATTRIBUTE>
	<ATTRIBUTE NAME="NAME" DESC="Normalized Name">
		<TYPE>CHAR</TYPE>
		<RANGE><BLOCK>
		return NormalizedText($edited->{DESC});
		</BLOCK></RANGE>
		<RECALCULATE>Y</RECALCULATE>
		<LIST>Y</LIST>
	</ATTRIBUTE>
	<ATTRIBUTE NAME="ES" DESC="Spanish">
		<TYPE>CHAR</TYPE>
	</ATTRIBUTE>
	<ATTRIBUTE NAME="TYPE" DESC="Type">
		<TYPE>CHAR</TYPE>
		<RANGE>(,Text,Integer,Decimal,Relation,Float,Memo,Link,Account,Unknown)</RANGE>
		<LIST>Y</LIST>
		<REQUIRED>Y</REQUIRED>
	</ATTRIBUTE>
	<ATTRIBUTE NAME="HIDE" DESC="Hide include">
		<TYPE>CHAR</TYPE>
	</ATTRIBUTE>
	<ATTRIBUTE NAME="RANGE" DESC="Range include">
		<TYPE>CHAR</TYPE>
	</ATTRIBUTE>
	<ATTRIBUTE NAME="PRIVATE" DESC="Private">
		<TYPE>BOOLEAN</TYPE>
	</ATTRIBUTE>
	<ATTRIBUTE NAME="ENABLE" DESC="Enable">
		<TYPE>BOOLEAN</TYPE>
		<DEFAULT>Y</DEFAULT>
	</ATTRIBUTE>

	<METHOD NAME="NEW" DESC="New">
		<TYPE>NEW</TYPE>
		<FIELD NAME="TOPIC"/>
		<FIELD NAME="POSITION"/>
		<FIELD NAME="DESC"/>
		<FIELD NAME="NAME"/>
		<FIELD NAME="ES"/>
		<FIELD NAME="TYPE"/>
		<FIELD NAME="HIDE"/>
		<FIELD NAME="RANGE"/>
		<FIELD NAME="PRIVATE"/>
		<FIELD NAME="ENABLE"/>
	</METHOD>
	<METHOD NAME="MODIFY" DESC="Edit">
		<TYPE>NORMAL</TYPE>
		<FIELD NAME="DESC"/>
		<FIELD NAME="NAME">
		  <READ_ONLY>Y</READ_ONLY>
		</FIELD>
		<FIELD NAME="POSITION"/>
		<FIELD NAME="ES"/>
		<FIELD NAME="TYPE"/>
		<FIELD NAME="HIDE"/>
		<FIELD NAME="RANGE"/>
		<FIELD NAME="PRIVATE"/>
		<FIELD NAME="ENABLE"/>
	</METHOD>
	<METHOD NAME="DELETE" DESC="Delete">
		<HINT>Remove view from system.</HINT>
		<TYPE>DELETE</TYPE>
	</METHOD>
	<VIEW NAME="DEFAULT" DESC="Default">
		<VIEW_FIELD NAME="ID"/>
		<VIEW_FIELD NAME="TOPIC"/>
		<VIEW_FIELD NAME="DESC"/>
		<VIEW_FIELD NAME="POSITION"/>
		<VIEW_FIELD NAME="ENABLE"/>
	</VIEW>
</OBJECT>
<OBJECT NAME="ACTIONS" DESC="Actions">
	<ATTRIBUTE NAME="ID" DESC="Id">
		<TYPE>AUTO</TYPE>
		<KEY>Y</KEY>
		<REQUIRED>Y</REQUIRED>
	</ATTRIBUTE>
	<ATTRIBUTE NAME="TOPIC" DESC="Associated Topic">
		<TYPE>RELATION</TYPE>
		<RELATION>TOPICS</RELATION>
		<KEY_CAPTION>Y</KEY_CAPTION>
		<REQUIRED>Y</REQUIRED>
	</ATTRIBUTE>
	<ATTRIBUTE NAME="POSITION" DESC="Position">
		<HINT>Position of the field in the view.</HINT>
		<TYPE>INT</TYPE>
		<REQUIRED>Y</REQUIRED>
	</ATTRIBUTE>
	<ATTRIBUTE NAME="DESC" DESC="Name">
		<TYPE>CHAR</TYPE>
		<RECALCULATE>Y</RECALCULATE>
	</ATTRIBUTE>
	<ATTRIBUTE NAME="NAME" DESC="Normalized Name">
		<TYPE>CHAR</TYPE>
		<RANGE><BLOCK>
		return NormalizedText($edited->{DESC});
		</BLOCK></RANGE>
		<RECALCULATE>Y</RECALCULATE>
		<LIST>Y</LIST>
	</ATTRIBUTE>
	<ATTRIBUTE NAME="ES" DESC="Spanish">
		<TYPE>CHAR</TYPE>
	</ATTRIBUTE>
	<ATTRIBUTE NAME="TYPE" DESC="Type">
		<TYPE>CHAR</TYPE>
		<RANGE>(New,Modify,Delete)</RANGE>
		<LIST>Y</LIST>
		<REQUIRED>Y</REQUIRED>
	</ATTRIBUTE>
	<ATTRIBUTE NAME="PRIVATE" DESC="Private">
		<TYPE>BOOLEAN</TYPE>
	</ATTRIBUTE>
	<ATTRIBUTE NAME="STEP0" DESC="Step 0 Include">
		<TYPE>CHAR</TYPE>
	</ATTRIBUTE>
	<ATTRIBUTE NAME="STEP1" DESC="Step 1 Include">
		<TYPE>CHAR</TYPE>
	</ATTRIBUTE>
	<ATTRIBUTE NAME="STEP2" DESC="Step 2 Include">
		<TYPE>CHAR</TYPE>
	</ATTRIBUTE>
	<ATTRIBUTE NAME="STEP3" DESC="Step 3 Include">
		<TYPE>CHAR</TYPE>
	</ATTRIBUTE>
	<ATTRIBUTE NAME="STEP4" DESC="Step 4 Include">
		<TYPE>CHAR</TYPE>
	</ATTRIBUTE>
	<ATTRIBUTE NAME="FIELDS" DESC="Fields">
		<TYPE>CHAR</TYPE>
		<MULTIPLE>Y</MULTIPLE>
		<RANGE><BLOCK>
		my $fields=EXGet_Instance('ATTRIBUTES',{TOPIC=>$edited->{TOPIC},ENABLE=>'Y'},{},'NONE');
		my $list='(';
		foreach my $f(@$fields)
		{
			$list.=$f->{DESC}.',';
		}
		$list=~s/\,\Z/\)/;
		return $list;
		</BLOCK></RANGE>
	</ATTRIBUTE>
	<ATTRIBUTE NAME="ENABLE" DESC="Enable">
		<TYPE>BOOLEAN</TYPE>
		<DEFAULT>Y</DEFAULT>
	</ATTRIBUTE>
	<METHOD NAME="NEW" DESC="New">
		<TYPE>NEW</TYPE>
		<FIELD NAME="TOPIC"/>
		<FIELD NAME="POSITION"/>
		<FIELD NAME="DESC"/>
		<FIELD NAME="NAME"/>
		<FIELD NAME="ES"/>
		<FIELD NAME="TYPE"/>
		<FIELD NAME="PRIVATE"/>
		<FIELD NAME="STEP0"/>
		<FIELD NAME="STEP1"/>
		<FIELD NAME="STEP2"/>
		<FIELD NAME="STEP3"/>
		<FIELD NAME="STEP4"/>
		<FIELD NAME="FIELDS"/>
		<FIELD NAME="ENABLE"/>
	</METHOD>
	<METHOD NAME="MODIFY" DESC="Edit">
		<TYPE>NORMAL</TYPE>
		<FIELD NAME="DESC"/>
		<FIELD NAME="NAME">
		  <READ_ONLY>Y</READ_ONLY>
		</FIELD>
		<FIELD NAME="POSITION"/>
		<FIELD NAME="ES"/>
		<FIELD NAME="TYPE"/>
		<FIELD NAME="PRIVATE"/>
		<FIELD NAME="STEP0"/>
		<FIELD NAME="STEP1"/>
		<FIELD NAME="STEP2"/>
		<FIELD NAME="STEP3"/>
		<FIELD NAME="STEP4"/>
		<FIELD NAME="FIELDS"/>
		<FIELD NAME="ENABLE"/>
	</METHOD>
	<METHOD NAME="DELETE" DESC="Delete">
		<TYPE>DELETE</TYPE>
	</METHOD>
	<VIEW NAME="DEFAULT" DESC="Default">
		<VIEW_FIELD NAME="DESC"/>
		<VIEW_FIELD NAME="POSITION"/>
		<VIEW_FIELD NAME="ENABLE"/>
	</VIEW>
</OBJECT>

	<MENU NAME="DOABOO">
		<DESC>DoABoo configuration</DESC>
		<PARENT>ADMIN</PARENT>
	</MENU>
	<MENU NAME="TOPICS">
		<DESC>Topics</DESC>
		<PARENT>DOABOO</PARENT>
	</MENU>
	<MENU NAME="ATTRIBUTES">
		<DESC>Fields</DESC>
		<PARENT>TOPICS</PARENT>
	</MENU>
	<MENU NAME="ACTIONS">
		<DESC>Actions</DESC>
		<PARENT>TOPICS</PARENT>
	</MENU>
</MODULE>
